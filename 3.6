# Find Source Root
cd ../ && export TOOLCHAIN_ROOT="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )";

# Define specifications of remote repositories.
export REMOTE_URL="https://github.com/dragon-tc"
export BRANCH="release_36"
$TOOLCHAIN_ROOT/build/common sync;

# Export Version
export DTC_VERSION="3.6";

# Clean tree
if [ -d $TOOLCHAIN_ROOT/cmake ];
then
  $TOOLCHAIN_ROOT/build/common clean;
fi;

# Set OPT if requested
if [ "$1" == "opt" ];
then
    export OPT="-march=native -mtune=native" 
fi;

# Set locally required flags for LLVM Compilation
export LOCAL_CXX_FLAGS="-fpermissive -fPIC"
export LOCAL_C_FLAGS="-fPIC"

# Compile Toolchain
$TOOLCHAIN_ROOT/build/common build;
